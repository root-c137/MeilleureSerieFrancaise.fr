{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset("CSS/LabelFloat.css")  }}"/>
    <link rel="stylesheet" href="{{ asset("CSS/Inscription.css")  }}"/>

{% endblock %}

{% block body %}
    <section id="Inscription" class="ResetPassword" >

        <h2>Renitialisez votre mot de passe</h2>

        <div class="Formulaire">


            {{ form_start(Form) }}


            <div class="FormGroup">
                {{

                form_widget(Form.password.first,  {
                    'attr': {
                        'class' : 'FormControl'
                    }})

                }}

                {{
                form_label(Form.password.first, label|default(null), {
                    'label_attr' : {
                        'class' : 'FormLabel'
                    }
                })
                }}

            </div>

            <div class="FormGroup">
                {{

                form_widget(Form.password.second,  {
                    'attr': {
                        'class' : 'FormControl'
                    }})

                }}

                {{
                form_label(Form.password.second, label|default(null), {
                    'label_attr' : {
                        'class' : 'FormLabel'
                    }
                })
                }}

            </div>

            {{ form_widget(Form.submit) }}

            {{ form_end(Form) }}
        </div>

    </section>
{% endblock %}
